<div class="loginpage">
  <div style="width:900px; margin:0 auto; text-align: center; display: flex;  
  flex-wrap: wrap;">



<div class="container">
  <div class="nft-row col-lg-4 col-md-6">
    {{#each NFTcollection as |item|}}
      <div class="nft-div associated-item-{{item.id}}">
        {{>NFTitem item}}
          <button class='add-favorite'
            data-unique_name={{item.unique_name}}
            data-name={{item.name}}
            data-image={{item.image}}
            data-amount={{item.amount}}
            data-symbol={{item.symbol}}
          >Favorite</button>
      </div>
    {{/each}}
  </div>
</div>
<script src="/javascript/favorite.js"></script>

